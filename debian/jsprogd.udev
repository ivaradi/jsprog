# Rule to make USB joystick's event files be owned by group "plugdev"
# and have permissions 0660
SUBSYSTEMS=="usb", KERNEL=="event*", ENV{ID_INPUT_JOYSTICK}=="?*", GROUP="plugdev", MODE="0660"
SUBSYSTEMS=="usb", KERNEL=="event*", ENV{ID_INPUT_JOYSTICK}=="", ENV{ID_INPUT_KEYBOARD}=="", ENV{ID_INPUT_MOUSE}=="", ENV{ID_INPUT_TOUCHPAD}=="", ENV{ID_INPUT_TABLET}=="", GROUP="plugdev", MODE="0660"

# The uinput device
KERNEL=="uinput", GROUP="plugdev", MODE="0660"
